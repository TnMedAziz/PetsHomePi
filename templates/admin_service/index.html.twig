{% extends 'reservation/index.html.twig' %}

{% block content %}
    <h1>Liste des Services</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">ID Type</th>
                <th scope="col">Prix</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for service in services %}
                <tr>
                    <td>{{ service.nomService }}</td>
                    <td>{{ service.idType }}</td>
                    <td>{{ service.prix }}</td>
                    <td>
                        <a href="{{ path('app_admin_edit_service', {'id': service.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('app_admin_delete_service', {'id': service.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_admin_new_service') }}" class="btn btn-primary">Ajouter un service</a>
{% endblock %}
